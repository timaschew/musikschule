<h1>Listing courses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start</th>
    <th>Duration</th>
    <th>Weekday</th>
    <th>Coursetype</th>
    <th>Honorartype</th>
    <th>Honorar</th>
    <th>Comment</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%=h course.name %></td>
    <td><%=h course.start.strftime("%H:%M") %></td>
    <td><%=h course.duration.strftime("%H:%M") %></td>
    <td><%=h course.weekday %></td>
    <td><%=h course.coursetype %></td>
    <td><%=h course.honorartype %></td>
    <td><%=h course.honorar %></td>
    <td><%=h course.comment %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New course', new_course_path %>