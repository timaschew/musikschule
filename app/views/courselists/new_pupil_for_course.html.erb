<h1>Neue Kurszuweisung</h1>

<% form_for(@courselist) do |f| %>
  <%= f.error_messages %>

<p><%= "Kurs: " + @course.pretty_name %></p>
<%= hidden_field_tag(:course_id, @course.id) %>
<br/>
<%= label :pupil_id, "Sch&uuml;ler:" %>
<%= select_tag(:pupil_id, options_from_collection_for_select(@pupils, :id, :get_full_name)) %>



  <p>
    <%= f.label :Anmeldung %><br />
    <%= f.date_select :register, :order => [:day, :month, :year], :use_month_numbers => true %>
	&nbsp;&nbsp;&nbsp;
	<%= label_tag 'unbekanntes Datum' %>&nbsp;
	<%= check_box_tag 'noRegister', 1, 1 %>
  </p>
  <p>
    <%= f.label 'gekündigt' %><br />
    <%= f.check_box :canceled %>
  </p>
  <p>
    <%= f.label 'Kündigung' %><br />
    <%= f.date_select :quit, :order => [:day, :month, :year], :use_month_numbers => true %>
  </p>
  <p>
    <%= f.label :Kommentar %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit 'Erstellen' %>
  </p>
<% end %>

<%= link_to 'Zur&uuml;ck', courselists_path %>