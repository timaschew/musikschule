<h1>Neue Kurszuweisung</h1>

<% form_for(@courselist) do |f| %>
  <%= f.error_messages %>

<%# label :pupil_id, "Sch&uuml;ler:" %>
<%# select_tag(:pupil_id, options_from_collection_for_select(@pupils, :id, ['lastname', 'firstname'])) %>

<p><%= @pupil.firstname + " " + @pupil.lastname %></p>

<%= hidden_field_tag(:pupil_id, @pupil.id) %>

<%= label :course_id, "Kurs:" %>
<%= select_tag(:course_id, options_from_collection_for_select(@courses, :id, :name)) %>

  <p>
    <%= f.label :Anmeldung %><br />
    <%= f.date_select :register, :order => [:day, :month, :year], :use_month_numbers => true %>
	&nbsp;&nbsp;&nbsp;
	<%= label_tag 'unbekanntes Datum' %>&nbsp;
	<%= check_box_tag 'noRegister', 1, 1 %>
  </p>
  <p>
    <%= f.label 'gekündigt' %><br />
    <%= f.check_box :canceled, :order => [:day, :month, :year], :use_month_numbers => true %>
  </p>
  <p>
    <%= f.label 'Kündigung' %><br />
    <%= f.date_select :quit %>
  </p>
  <p>
    <%= f.label :Kommentar %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit 'Erstellen' %>
  </p>
<% end %>

<%= link_to 'Zur&uuml;ck', courselists_path %>